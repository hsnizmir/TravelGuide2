<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/nav_header_vertical_spacing_tiny"
    android:layout_marginBottom="@dimen/nav_header_vertical_spacing_tiny"
    android:layout_marginStart="@dimen/nav_header_vertical_spacing_tiny"
    android:layout_marginEnd="@dimen/nav_header_vertical_spacing_tiny"
    app:cardCornerRadius="@dimen/nav_header_vertical_spacing_tiny"
    android:layout_width="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/locationNameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:ellipsize="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/nav_header_vertical_spacing_tiny"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:paddingEnd="@dimen/nav_header_vertical_spacing_tiny"
            android:paddingBottom="@dimen/nav_header_vertical_spacing"
            android:textColor="@android:color/black">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/drawnDownIv"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_drawn_down" />

    </LinearLayout>

</androidx.cardview.widget.CardView>